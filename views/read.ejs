<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title><%= title %></title>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <style>
      body {
        font-family: Arial, sans-serif;
        max-width: 800px;
        margin: 50px auto;
        padding: 20px;
      }
      h1 {
        color: #333;
        border-bottom: 3px solid #4caf50;
        padding-bottom: 10px;
        margin-bottom: 30px;
      }
      .post-header {
        background-color: #f8f9fa;
        padding: 20px;
        border: 1px solid #dee2e6;
        border-radius: 4px;
        margin-bottom: 20px;
      }
      .post-title {
        font-size: 1.5em;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
      }
      .post-meta {
        display: flex;
        justify-content: space-between;
        color: #666;
        font-size: 14px;
        border-top: 1px solid #dee2e6;
        padding-top: 10px;
      }
      .meta-item {
        display: flex;
        align-items: center;
      }
      .meta-label {
        font-weight: bold;
        margin-right: 5px;
      }
      .post-body {
        background-color: #ffffff;
        padding: 30px;
        border: 1px solid #dee2e6;
        border-radius: 4px;
        min-height: 300px;
        line-height: 1.8;
        white-space: pre-wrap;
        margin-bottom: 30px;
        font-size: 16px;
      }
      .post-footer {
        border-top: 1px solid #dee2e6;
        padding-top: 20px;
        text-align: center;
      }
      .btn {
        display: inline-block;
        padding: 10px 20px;
        margin: 0 10px;
        text-decoration: none;
        border-radius: 4px;
        cursor: pointer;
        border: none;
        font-weight: normal;
        transition: all 0.3s ease;
      }
      .btn-update {
        background-color: #4caf50;
        color: white;
      }
      .btn-update:hover {
        background-color: #45a049;
      }
      .btn-list {
        background-color: #6c757d;
        color: white;
      }
      .btn-list:hover {
        background-color: #5a6268;
      }

      /* 반응형 디자인 */
      @media (max-width: 600px) {
        .post-meta {
          flex-direction: column;
          gap: 5px;
        }
        .btn {
          display: block;
          margin: 10px auto;
          width: 150px;
        }
      }
    </style>
  </head>
  <body>
    <h1><%= title %></h1>

    <!-- 게시글 헤더 -->
    <div class="post-header">
      <div class="post-title"><%= post.title %></div>
      <div class="post-meta">
        <div class="meta-item">
          <span class="meta-label">글번호:</span>
          <span>#<%= post.idx %></span>
        </div>
        <div class="meta-item">
          <span class="meta-label">작성자:</span>
          <span><%= post.creator_id %></span>
        </div>
        <div class="meta-item">
          <span class="meta-label">조회수:</span>
          <span><%= post.hit %></span>
        </div>
      </div>
    </div>

    <!-- 게시글 본문 -->
    <div class="post-body"><%= post.content %></div>

    <!-- 게시글 푸터 -->
    <div class="post-footer">
      <form style="display: inline" action="/board/update" method="get">
        <input type="hidden" name="idx" value="<%= post.idx %>" />
        <button type="submit" class="btn btn-update">글 수정</button>
      </form>
      <a href="/board/" class="btn btn-list">목록으로</a>
    </div>

    <script>
      $(document).ready(function () {
        // 글 수정 확인
        $("form").submit(function (e) {
          if (!confirm("게시글을 수정하시겠습니까?")) {
            e.preventDefault();
            return false;
          }
          return true;
        });

        // 목록으로 이동 확인
        $(".btn-list").click(function (e) {
          if (!confirm("목록으로 돌아가시겠습니까?")) {
            e.preventDefault();
            return false;
          }
          return true;
        });
      });
    </script>
  </body>
</html>
