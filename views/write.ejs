<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title><%= title %></title>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <style>
      /* Base styles */
      body {
        font-family: Arial, sans-serif;
        max-width: 800px;
        margin: 50px auto;
        padding: 20px;
        background-color: #f5f5f5;
      }

      /* Student Info Header */
      .student-header {
        position: fixed;
        top: 0;
        right: 20px;
        background: linear-gradient(135deg, #2196f3, #1976d2);
        color: white;
        padding: 10px 20px;
        border-radius: 0 0 15px 15px;
        box-shadow: 0 4px 12px rgba(33, 150, 243, 0.3);
        z-index: 1000;
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 14px;
      }
      .student-icon {
        width: 35px;
        height: 35px;
        background: #1976d2;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 16px;
        border: 2px solid white;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
      }
      .student-info {
        display: flex;
        flex-direction: column;
        line-height: 1.3;
      }
      .student-id {
        font-weight: bold;
        font-size: 13px;
      }
      .student-name {
        font-size: 12px;
        opacity: 0.9;
      }

      /* Header */
      h1 {
        color: #1976d2;
        border-bottom: 3px solid #2196f3;
        padding-bottom: 10px;
        margin-top: 60px; /* Add space for fixed header */
      }

      /* Form group */
      .form-group {
        margin-bottom: 20px;
      }

      /* Labels */
      label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        color: #333;
      }

      /* Input fields */
      input[type="text"],
      input[type="password"],
      textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        box-sizing: border-box;
        font-size: 14px;
      }

      /* Textarea */
      textarea {
        min-height: 300px;
        resize: vertical;
        font-family: Arial, sans-serif;
      }

      /* File upload */
      input[type="file"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        background-color: #fff;
        cursor: pointer;
        font-size: 14px;
        box-sizing: border-box;
      }

      /* Image preview */
      #imagePreview {
        margin-top: 10px;
        font-size: 13px;
        color: #666;
      }
      #imagePreview img {
        max-width: 100%;
        max-height: 200px;
        margin-top: 5px;
        border: 1px solid #ddd;
        border-radius: 4px;
      }

      /* Buttons */
      .btn-container {
        margin-top: 20px;
        text-align: center;
      }
      button {
        padding: 10px 30px;
        background-color: #2196f3;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        margin: 0 5px;
      }
      button:hover {
        background-color: #1976d2;
      }
      .btn-cancel {
        background-color: #757575;
      }
      .btn-cancel:hover {
        background-color: #616161;
      }
    </style>
  </head>
  <body>
    <!-- Student Info Header -->
    <div class="student-header">
      <div class="student-icon">B</div>
      <div class="student-info">
        <div class="student-id">2021202502</div>
        <div class="student-name">Tran Xuan Binh</div>
      </div>
    </div>

    <h1><%= title %></h1>

    <form
      id="writeForm"
      method="POST"
      action="/board/write"
      enctype="multipart/form-data"
      novalidate
    >
      <div class="form-group">
        <label>작성자 ID:</label>
        <input type="text" name="creator_id" id="creator_id" required />
      </div>

      <div class="form-group">
        <label>제목:</label>
        <input type="text" name="title" id="title" required />
      </div>

      <div class="form-group">
        <label>내용:</label>
        <textarea name="content" id="content" required></textarea>
      </div>

      <div class="form-group">
        <label>이미지 첨부 (선택):</label>
        <input type="file" name="image_path" id="imageFile" accept="image/*" />
        <div id="imagePreview"></div>
      </div>

      <div class="form-group">
        <label>비밀번호:</label>
        <input
          type="password"
          name="passwd"
          id="passwd"
          required
          placeholder="게시글 수정/삭제시 필요합니다"
        />
      </div>

      <div class="btn-container">
        <button type="submit">등록</button>
        <button type="button" class="btn-cancel" id="cancelBtn">취소</button>
      </div>
    </form>

    <script>
      $(document).ready(function () {
        // Form validation
        $("#writeForm").submit(function (e) {
          var emptyFields = [];
          if (!$("#creator_id").val().trim()) emptyFields.push("작성자 ID");
          if (!$("#title").val().trim()) emptyFields.push("제목");
          if (!$("#content").val().trim()) emptyFields.push("내용");
          if (!$("#passwd").val().trim()) emptyFields.push("비밀번호");

          if (emptyFields.length > 0) {
            e.preventDefault();
            alert(emptyFields.join(", ") + "을(를) 입력해주세요.");
            return false;
          }

          if (confirm("게시글을 등록하시겠습니까?")) {
            return true;
          } else {
            e.preventDefault();
            return false;
          }
        });

        // Cancel with confirmation
        $("#cancelBtn").click(function () {
          var hasContent =
            $("#creator_id").val().trim() !== "" ||
            $("#title").val().trim() !== "" ||
            $("#content").val().trim() !== "" ||
            $("#passwd").val().trim() !== "";

          if (hasContent) {
            if (confirm("작성 중인 내용이 있습니다. 취소하시겠습니까?")) {
              window.location.href = "/board/";
            }
          } else {
            window.location.href = "/board/";
          }
        });

        // Image preview
        $("#imageFile").change(function (e) {
          var file = e.target.files[0];
          if (file) {
            // Validate file
            if (file.size > 5 * 1024 * 1024 || !file.type.match("image.*")) {
              alert("이미지 파일만 업로드 가능합니다 (최대 5MB)");
              $(this).val("");
              $("#imagePreview").html("");
              return;
            }

            // Show preview
            var reader = new FileReader();
            reader.onload = function (e) {
              $("#imagePreview").html(
                '<img src="' + e.target.result + '" alt="미리보기">'
              );
            };
            reader.readAsDataURL(file);
          } else {
            $("#imagePreview").html("");
          }
        });

        // Real-time validation feedback on blur
        $("#creator_id, #title, #content, #passwd").blur(function () {
          if ($(this).val().trim() === "") {
            $(this).css("border-color", "#f44336");
          } else {
            $(this).css("border-color", "#2196F3");
          }
        });
      });
    </script>
  </body>
</html>
