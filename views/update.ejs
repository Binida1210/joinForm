<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title><%= title %></title>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <style>
      /* Base layout */
      body {
        font-family: Arial, sans-serif;
        max-width: 800px;
        margin: 50px auto;
        padding: 20px;
      }

      /* Student Info Header */
      .student-header {
        position: fixed;
        top: 0;
        right: 20px;
        background: linear-gradient(135deg, #2196f3, #1976d2);
        color: white;
        padding: 10px 20px;
        border-radius: 0 0 15px 15px;
        box-shadow: 0 4px 12px rgba(33, 150, 243, 0.3);
        z-index: 1000;
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 14px;
      }
      .student-icon {
        width: 35px;
        height: 35px;
        background: #1976d2;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 16px;
        border: 2px solid white;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
      }
      .student-info {
        display: flex;
        flex-direction: column;
        line-height: 1.3;
      }
      .student-id {
        font-weight: bold;
        font-size: 13px;
      }
      .student-name {
        font-size: 12px;
        opacity: 0.9;
      }

      /* Page header */
      h1 {
        color: #1976d2;
        border-bottom: 3px solid #2196f3;
        padding-bottom: 10px;
        margin-bottom: 30px;
        margin-top: 60px; /* Add space for fixed header */
      }

      /* Form styling */
      .form-group {
        margin-bottom: 20px;
      }
      label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        color: #555;
      }

      /* Input fields */
      input[type="text"],
      input[type="password"],
      input[type="file"],
      textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        box-sizing: border-box;
        font-size: 14px;
      }
      textarea {
        min-height: 300px;
        resize: vertical;
        font-family: Arial, sans-serif;
      }

      /* Image preview */
      .current-image {
        margin-top: 5px;
        color: #666;
        font-size: 13px;
      }
      .current-image img {
        max-width: 100%;
        max-height: 150px;
        margin-top: 5px;
        border: 1px solid #ddd;
        border-radius: 4px;
      }
      #imagePreview {
        margin-top: 10px;
        font-size: 13px;
        color: #666;
      }
      #imagePreview img {
        max-width: 100%;
        max-height: 150px;
        margin-top: 5px;
        border: 1px solid #ddd;
        border-radius: 4px;
      }

      /* Button styling */
      .btn-container {
        margin-top: 20px;
        text-align: center;
      }
      button {
        padding: 10px 30px;
        background-color: #2196f3;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        margin-right: 10px;
      }
      button:hover {
        background-color: #1976d2;
      }
      .btn-cancel {
        background-color: #999;
      }
      .btn-cancel:hover {
        background-color: #777;
      }
    </style>
  </head>
  <body>
    <!-- Student Info Header -->
    <div class="student-header">
      <div class="student-icon">B</div>
      <div class="student-info">
        <div class="student-id">2021202502</div>
        <div class="student-name">Tran Xuan Binh</div>
      </div>
    </div>

    <h1><%= title %></h1>

    <form
      id="updateForm"
      method="POST"
      action="/board/update"
      enctype="multipart/form-data"
      novalidate
    >
      <input type="hidden" name="idx" value="<%= post.idx %>" />

      <div class="form-group">
        <label>작성자 ID:</label>
        <input
          type="text"
          name="creator_id"
          id="creator_id"
          value="<%= post.creator_id %>"
        />
      </div>

      <div class="form-group">
        <label>제목:</label>
        <input type="text" name="title" id="title" value="<%= post.title %>" />
      </div>

      <div class="form-group">
        <label>내용:</label>
        <textarea name="content" id="content"><%= post.content %></textarea>
      </div>

      <!-- 이미지 -->
      <div class="form-group">
        <label>이미지:</label>
        <% if (post.image_path && post.image_path.trim() !== '') { %>
        <div class="current-image">
          현재: <%= post.image_path %>
          <img src="/uploads/<%= post.image_path %>" alt="현재 이미지" />
        </div>
        <input
          type="hidden"
          name="current_image_path"
          value="<%= post.image_path %>"
        />
        <% } else { %>
        <div class="current-image">현재 이미지 없음</div>
        <% } %>
        <input
          type="file"
          name="image_path"
          id="imageFile"
          accept="image/*"
          style="margin-top: 10px"
        />
        <div id="imagePreview"></div>
      </div>

      <div class="form-group">
        <label>비밀번호:</label>
        <input
          type="password"
          name="passwd"
          id="passwd"
          placeholder="기존 비밀번호를 입력하세요"
        />
      </div>

      <div class="btn-container">
        <button type="submit">수정완료</button>
        <button type="button" class="btn-cancel" id="cancelBtn">취소</button>
      </div>
    </form>

    <script>
      $(document).ready(function () {
        // Form validation
        $("#updateForm").submit(function (e) {
          var emptyFields = [];
          if (!$("#creator_id").val().trim()) emptyFields.push("작성자 ID");
          if (!$("#title").val().trim()) emptyFields.push("제목");
          if (!$("#content").val().trim()) emptyFields.push("내용");
          if (!$("#passwd").val().trim()) emptyFields.push("비밀번호");

          if (emptyFields.length > 0) {
            e.preventDefault();
            alert(emptyFields.join(", ") + "을(를) 입력해주세요.");
            return false;
          }

          if (confirm("게시글을 수정하시겠습니까?")) {
            return true;
          } else {
            e.preventDefault();
            return false;
          }
        });

        // Cancel update
        $("#cancelBtn").click(function () {
          if (confirm("수정을 취소하시겠습니까?")) {
            var idx = $("input[name='idx']").val();
            window.location.href = "/board/read/" + idx;
          }
        });

        // Field validation
        $("#creator_id, #title, #content, #passwd").blur(function () {
          if ($(this).val().trim() === "") {
            $(this).css("border-color", "red");
          } else {
            $(this).css("border-color", "#2196F3");
          }
        });

        // Image preview
        $("#imageFile").change(function (e) {
          var file = e.target.files[0];
          if (file) {
            // Validate file (combine checks)
            if (file.size > 5 * 1024 * 1024 || !file.type.match("image.*")) {
              alert("이미지 파일만 업로드 가능합니다 (최대 5MB)");
              $(this).val("");
              $("#imagePreview").html("");
              return;
            }

            // Display preview
            var reader = new FileReader();
            reader.onload = function (e) {
              $("#imagePreview").html(
                "새 이미지: <br><img src='" +
                  e.target.result +
                  "' alt='미리보기'>"
              );
            };
            reader.readAsDataURL(file);
          } else {
            $("#imagePreview").html("");
          }
        });
      });
    </script>
  </body>
</html>
